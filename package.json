{
  "name": "ktlbd-website-app",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "typecheck": "tsc --noEmit",
    "format": "prettier -w .",
    "clean": "rimraf .next dist build coverage",
    "preview": "vite preview",
    "start": "vite preview",
    "build:wsl": "node node_modules/vite/bin/vite.js build --outDir $HOME/WEB20_project_dist",
    "preview:wsl": "node node_modules/vite/bin/vite.js preview --port 4173 --strictPort --outDir $HOME/WEB20_project_dist",
    "optimize-images": "node optimize-images.js",
    "generate-sitemap": "node generate-sitemap.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run test:run && npm run test:e2e"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "gsap": "^3.13.0",
    "lucide-react": "^0.344.0",
    "motion": "^12.23.24",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.7.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/ui": "^4.0.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "jsdom": "^27.0.1",
    "playwright": "^1.56.1",
    "postcss": "^8.4.35",
    "sharp": "^0.34.4",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.3.0",
    "vite": "^7.1.6",
    "vitest": "^4.0.1"
  }
}
